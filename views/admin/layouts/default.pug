doctype html
html(lang="vi")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title #{pageTitle || 'Admin Dashboard'}

        // Bootstrap + Icons + Custom
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")
        link(rel="stylesheet", href="/admin/css/style.css")

        block styles

    body.d-flex.flex-column.min-vh-100
        // Header
        include ../partials/header.pug

        // Body wrapper
        .container-fluid.flex-grow-1
            .row
                // Sidebar
                include ../partials/sider.pug

                // Main content
                main.col-md-9.col-lg-10.ml-sm-auto.p-4
                    // Breadcrumb
                    if pageTitle
                        nav(aria-label="breadcrumb")
                            ol.breadcrumb
                                li.breadcrumb-item
                                    a(href="/admin") Trang chá»§
                                li.breadcrumb-item.active(aria-current="page") #{pageTitle}
                        h2.mb-4 #{pageTitle}

                    block main

        // Footer
        include ../partials/footer.pug

        // JS
        script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
        script(src="https://cdn.tiny.cloud/1/s5hj5w9txuxkc2x0p70oeahr2din8pi92lwyl7z688l665p4/tinymce/6/tinymce.min.js" referrerpolicy="origin")
        script(src="/admin/js/tinymce-config.js") 
        script(src="/admin/js/script.js")
        block scripts
